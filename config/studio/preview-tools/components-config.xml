<?xml version="1.0" encoding="UTF-8"?>
<!--
    This file configures the drag-and-drop components available in the Preview Tools. Those components can then
    be dragged and dropped on a drop-zone within a page.

    The structure of this file is:

    <config>
        <category> (list of components that can be created on the fly during the drag and drop)
            <label />
            <component>
                <label />
                <type /> (reference content type of the component)
                <path /> (where to store these components)
            </component>
        </category>
        <browse> (list of browse paths of where to find ready components to be dragged/dropped)
            <label />
            <path /> (where to look for)
        </browse>
    </config>
-->
<config>
    <category>
        <label>General</label>
        <component>
            <label>Feature</label>
            <type>/component/feature</type>
            <path>/site/components/features</path>
        </component>
        <component>
            <label>Site Header</label>
            <type>/plugins/theme-canvas/component-header</type>
            <path>/site/components/page</path>
        </component>
        <component>
            <label>Section Slider</label>
            <type>/plugins/theme-canvas/section-slider</type>
            <path>/site/components/page</path>
        </component>
        <component>
            <label>QR Code</label>
            <type>/plugins/qr-code/qr-code</type>
            <path>/site/components/page</path>
        </component>
        <component>
            <label>YouTube Video</label>
            <type>/plugins/youtube-video/youtube-video</type>
            <path>/site/components/page</path>
        </component>
        <component>
            <label>Rich Text</label>
            <type>/plugins/rich-text/rich-text</type>
            <path>/site/components/page</path>
        </component>
        <component>
            <label>RSS Feed</label>
            <type>/plugins/rss-feed/rss-feed</type>
            <path>/site/components/page</path>
        </component>

    </category>

    <category>
        <label>Layouts</label>
        <component>
            <label>Section Layout</label>
            <type>/plugins/bootstrap-layouts/section</type>
            <path>/site/components/page</path>
        </component>
        <component>
            <label>Two Col Layout</label>
            <type>/plugins/bootstrap-layouts/2-col</type>
            <path>/site/components/page</path>
        </component>
        <component>
            <label>Three Col Layout</label>
            <type>/plugins/bootstrap-layouts/3-col</type>
            <path>/site/components/page</path>
        </component>
        <component>
            <label>Four Col Layout</label>
            <type>/plugins/bootstrap-layouts/4-col</type>
            <path>/site/components/page</path>
        </component>
        <component>
            <label>Five Col Layout</label>
            <type>/plugins/bootstrap-layouts/5-col</type>
            <path>/site/components/page</path>
        </component>
    </category>


    <category>
        <label>Social Media</label>
        <component>
            <label>Twitter Feed</label>
            <type>/plugins/twitterfeed/twitterfeed</type>
            <path>/site/components/page</path>
        </component>
    </category>
    <browse>
        <label>Features</label>
        <path>/site/components/features</path>
    </browse>
</config>