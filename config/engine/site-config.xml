<site>
    <jobs>
        <jobFolder>
            <path>/scripts/jobs/every-minute</path>
            <cronExpression>0 0/1 * * * ?</cronExpression>
        </jobFolder>
    </jobs>
    <filters>
        <filter>
            <script>/scripts/filters/MyFilter.groovy</script>
            <mapping>
                <include>/**</include>
            </mapping>
        </filter>
    </filters>
</site>